<%- include('./header.ejs'); %>

  <div id="login-container">
    <div id="left-column"></div>
    <div id="branding">
      <img src="./images/logo.png" />
      <h1>Login - Chatfinity</h1>
    </div>
    <div id="login-form">
      <form method="post" action="">
        <input type="text" name="username" placeholder="enter mobile or email" value="" />
