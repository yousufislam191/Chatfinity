        <input type="password" name="password" placeholder="enter password" />
        <input type="submit" value="Login" />
      </form>
      <div id="login-down-area">
        <p>Don't have an account?</p>
        <p><a class="btn" href="/signup">Sign up</a></p>
      </div>
    </div>
  </div>
